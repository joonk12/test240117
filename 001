    <h1>자바스크립트를 사용한 간단한 예제</h1>

    <!-- 자바스크립트 코드 -->
    <script>
        // JavaScript 코드 작성
        console.log("안녕하세요, 자바스크립트!");

        // 변수 선언과 사용
        let number = 42;
        console.log("숫자:", number);

        // 함수 정의와 호출
        function greet(name) {
            alert("안녕하세요, " + name + "님!");
        }

        greet("Alice");
    </script>

